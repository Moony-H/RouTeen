<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/source_memo_movie_middle_guid_line"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5"
        />
    <EditText
        android:id="@+id/source_memo_movie_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/memo_movie_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="@id/source_memo_movie_middle_guid_line"
        android:layout_marginTop="@dimen/memo_title_edit_text_margin_top"
        android:layout_marginStart="@dimen/memo_title_edit_text_margin_left"
        android:autofillHints=""
        android:inputType="" />
    <TextView
        android:id="@+id/source_memo_movie_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/source_memo_movie_title"
        app:layout_constraintBottom_toBottomOf="@id/source_memo_movie_title"
        app:layout_constraintRight_toRightOf="parent"
        android:textStyle="bold"
        android:text="2020.01.01"
        android:layout_marginEnd="25dp"
        />
    <TextView
        android:id="@+id/source_memo_movie_director"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/source_memo_movie_title"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:text="Director:"
        android:textSize="17sp"
        />
    <EditText
        android:id="@+id/source_memo_movie_director_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/source_memo_movie_director"
        app:layout_constraintBottom_toBottomOf="@id/source_memo_movie_director"
        app:layout_constraintLeft_toLeftOf="@id/source_memo_movie_description_content"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="25dp"
        />
    <TextView
        android:id="@+id/source_memo_movie_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/source_memo_movie_director"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:textSize="17sp"
        android:text="Description:"
        />
    <EditText
        android:id="@+id/source_memo_movie_description_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/source_memo_movie_description"
        app:layout_constraintBottom_toBottomOf="@id/source_memo_movie_description"
        app:layout_constraintLeft_toRightOf="@id/source_memo_movie_description"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="25dp"
        android:layout_marginStart="10dp"
        />
    <RatingBar

        android:id="@+id/source_memo_movie_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:stepSize="0.5"
        android:layout_marginStart="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/source_memo_movie_description"
        android:theme="@style/RatingBar"
        style="@style/Widget.AppCompat.RatingBar.Indicator"
        android:minHeight="5dp"
        android:maxHeight="50dp"
        android:layout_marginTop="5dp"
        />
    <com.moony.routeen.ui.view.other.LinedEditText
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/source_memo_movie_rating"
        android:layout_margin="25dp"
        android:inputType="textMultiLine|textNoSuggestions"
        android:background="@color/transparent"
        android:textColor="@color/black"
        />

</merge>