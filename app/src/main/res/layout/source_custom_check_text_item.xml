<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="check_text_state"
            type="com.moony.routeen.data.structure.memo.CheckTextState" />
    </data>

    <merge
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">
        <CheckBox
            android:id="@+id/source_custom_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="0dp"
            android:minHeight="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/source_custom_edit"
            android:checked="@={check_text_state.checked}"
            />
        <EditText
            android:id="@+id/source_custom_edit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/source_custom_checkbox"
            app:layout_constraintRight_toRightOf="parent"
            android:text="@={check_text_state.text}"
            />

    </merge>
</layout>