<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/source_basic_memo_middle_guid"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5"
        />
    <EditText
        android:id="@+id/source_basic_memo_title_edit_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/basic_memo_title_hint"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="@id/source_basic_memo_middle_guid"
        android:layout_marginTop="@dimen/memo_title_edit_text_margin_top"
        android:layout_marginStart="@dimen/memo_title_edit_text_margin_left"
        android:autofillHints=""
        android:inputType="" />
    <TextView
        android:id="@+id/source_basic_memo_date_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/source_basic_memo_title_edit_text"
        app:layout_constraintBottom_toBottomOf="@id/source_basic_memo_title_edit_text"
        app:layout_constraintRight_toRightOf="parent"
        android:textStyle="bold"
        android:text="2020.01.01"
        android:layout_marginEnd="25dp"
        />
    <com.moony.routeen.ui.view.other.LinedEditText
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/source_basic_memo_title_edit_text"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="25dp"
        android:inputType="textMultiLine|textNoSuggestions"
        android:background="@color/transparent"
        android:textColor="@color/black"
        />

</merge>